    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "release-it": "^16.1.5",
    "rollup": "^3.29.2",
    "shx": "^0.3.4",
    "typescript": "^5.2.2"
  },
  "config": {
    "cz-message-helper": {
